  "experimental": {
    "enableAdvancedCodeAnalysis": true,
    "enableGitIntegration": true,
    "enableDockerSupport": true,
    "enableKubernetesSupport": true,
    "enableTemporalSupport": true,
    "allowFileSystemOperations": true,
    "enableDatabaseOperations": true,
    "enableCloudIntegration": true,
    "maxConcurrentOperations": 15,
    "enableCacheOptimization": true,
    "enablePerformanceMetrics": true,
    "enableSecurityScanning": true
  },
  "codebase": {
    "language": "go",
    "goVersion": "1.21+",
    "framework": "temporal",
    "testFramework": "testify",
    "buildTool": "make",
    "packageManager": "go mod",
    "containerization": "docker",
    "orchestration": "kubernetes",
    "databases": ["postgresql", "redis", "elasticsearch"],
    "messagingQueue": "temporal",
    "architecture": "microservices",
    "monorepo": true,
    "modules": [
      "core",
      "priv",
      "access-management",
      "connectors",
      "data-driven",
      "temporal-worker",
      "infra"
    ],
    "commonPatterns": {
      "configFiles": ["*.yaml", "*.yml", "*.json", "Makefile", "Dockerfile"],
      "testFiles": ["*_test.go"],
      "migrationFiles": ["*_migration.go"],
      "specFiles": ["*/sync/scan.yaml", "*/api/apis.yaml"]
    }
  },
  "team": {
    "preferredCommitStyle": "conventional",
    "commitMessageTemplate": "PRIV-{ticketId}: {description}\n\n{body}\n\nðŸ¤– Generated with [Claude Code](https://claude.ai/code)\n\nCo-Authored-By: Claude <noreply@anthropic.com>",
    "requireTestsForChanges": true,
    "enableLinting": true,
    "enableFormatting": true,
    "codeReviewRequired": true,
    "maxFunctionLength": 100,
    "enforceDocumentation": true,
    "branchingStrategy": "feature-branch",
    "mainBranch": "dev",
    "protectedBranches": ["main", "dev", "production"],
    "requirePRForMerge": true,
    "autoDeleteBranches": true,
    "squashMergePreferred": false
  },
  "development": {
    "environment": "local",
    "debugMode": true,
    "enableProfiler": true,
    "logLevel": "debug",
    "enableMetrics": true,
    "enableTracing": true,
    "hotReload": true,
    "enableCodeCompletion": true,
    "enableInlineDocumentation": true,
    "enableRefactoringSuggestions": true,
    "preferredTerminal": "bash",
    "enableColorOutput": true,
    "timezone": "Asia/Karachi"
  },
  "security": {
    "enableSecretScanning": true,
    "preventSecretsInCommits": true,
    "enableDependencyScanning": true,
    "enableVulnerabilityChecks": true,
    "requireSignedCommits": false,
    "enableGPGVerification": false,
    "allowedSecretPatterns": ["CRYPT:*"],
    "blockedSecretPatterns": [
      "password=*",
      "secret=*",
      "token=*",
      "key=*",
      "aws_access_key_id=*",
      "aws_secret_access_key=*"
    ]
  },
  "testing": {
    "framework": "testify",
    "coverage": {
      "minimum": 70,
      "target": 85,
      "excludePatterns": ["*_test.go", "main.go", "*/mocks/*"]
    },
    "testCommands": {
      "unit": "go test ./...",
      "integration": "make test-integration",
      "e2e": "make test-e2e",
      "coverage": "go test -coverprofile=coverage.out ./..."
    },
    "mockGeneration": "mockery",
    "enableBenchmarks": true,
    "enableFuzzTesting": true,
    "parallelExecution": true
  },
  "deployment": {
    "containerRegistry": "docker.io",
    "kubernetesNamespaces": [
      "default",
      "priv-dev",
      "priv-staging",
      "priv-prod"
    ],
    "helmCharts": true,
    "enableRollback": true,
    "enableCanaryDeployments": false,
    "enableBlueGreenDeployments": false,
    "healthCheckEndpoints": ["/health", "/ready"],
    "monitoringTools": ["prometheus", "grafana", "elasticsearch"],
    "logAggregation": "elasticsearch"
  },
  "ai": {
    "codeAnalysisDepth": "comprehensive",
    "suggestOptimizations": true,
    "suggestRefactoring": true,
    "explainComplexCode": true,
    "generateTests": true,
    "generateDocumentation": true,
    "detectCodeSmells": true,
    "suggestBestPractices": true,
    "enableContextualHelp": true,
    "preferredExplanationStyle": "concise",
    "enableProactiveAssistance": true
  },
  "workflows": {
    "defaultWorkflows": {
      "feature": [
        "create-branch",
        "implement-changes",
        "write-tests",
        "run-linting",
        "run-tests",
        "commit-changes",
        "create-pr"
      ],
      "bugfix": [
        "investigate-issue",
        "create-branch",
        "fix-implementation",
        "add-regression-tests",
        "verify-fix",
        "commit-changes",
        "create-pr"
      ],
      "refactor": [
        "analyze-code",
        "create-branch",
        "refactor-implementation",
        "ensure-tests-pass",
        "update-documentation",
        "commit-changes",
        "create-pr"
      ]
    },
    "hooks": {
      "preCommit": ["go fmt", "golangci-lint run", "go test ./..."],
      "prePush": ["make test-integration"],
      "postMerge": ["go mod tidy", "make build"]
    }
  },
  "integrations": {
    "jira": {
      "enabled": true,
      "ticketPattern": "PRIV-\\d+",
      "autoLinkCommits": true,
      "autoTransitionStates": false
    },
    "slack": {
      "enabled": false,
      "notifyOnPR": false,
      "notifyOnDeploy": false
    },
    "sonarqube": {
      "enabled": false,
      "qualityGate": "default"
    }
  },
  "performance": {
    "enableCaching": true,
    "cacheDirectory": ".claude/cache",
    "maxCacheSize": "1GB",
    "enableParallelProcessing": true,
    "maxParallelTasks": 8,
    "enableIndexing": true,
    "indexPatterns": ["*.go", "*.yaml", "*.yml", "*.json"],
    "excludeFromIndexing": ["vendor/", "node_modules/", ".git/", "*.log"]
  },
  "codeQuality": {
    "enableStaticAnalysis": true,
    "enableComplexityAnalysis": true,
    "enableSecurityAnalysis": true,
    "enablePerformanceAnalysis": true,
    "enableDuplicationDetection": true,
    "cyclomaticComplexityThreshold": 10,
    "enableDeadCodeDetection": true,
    "enableDependencyAnalysis": true,
    "enforceNamingConventions": true,
    "namingConventions": {
      "functions": "camelCase",
      "variables": "camelCase",
      "constants": "UPPER_SNAKE_CASE",
      "types": "PascalCase",
      "interfaces": "PascalCase",
      "packages": "lowercase"
    }
  },
  "documentation": {
    "autoGenerateComments": true,
    "generateAPIDocumentation": true,
    "generateReadme": false,
    "includeExamples": true,
    "includeUsageInstructions": true,
    "documentationFormat": "godoc",
    "enableTODOTracking": true,
    "enableFIXMETracking": true
  },
  "monitoring": {
    "enableMetrics": true,
    "enableTracing": true,
    "enableLogging": true,
    "logFormat": "json",
    "metricsCollector": "prometheus",
    "tracingProvider": "jaeger",
    "enableHealthChecks": true,
    "enableReadinessChecks": true,
    "enableLivenessChecks": true,
    "alerting": {
      "enableErrorAlerts": true,
      "enablePerformanceAlerts": true,
      "enableSecurityAlerts": true
    }
  },
  "database": {
    "enableMigrations": true,
    "enableSeeding": false,
    "enableBackups": true,
    "enableConnectionPooling": true,
    "enableQueryLogging": false,
    "enableSlowQueryDetection": true,
    "connectionTimeout": "30s",
    "queryTimeout": "60s",
    "migrationDirectory": "migrations/"
  },
  "localization": {
    "defaultLocale": "en-US",
    "supportedLocales": ["en-US", "ur-PK"],
    "enableRTL": false,
    "dateFormat": "YYYY-MM-DD",
    "timeFormat": "HH:mm:ss",
    "timezone": "Asia/Karachi"
  }
}
